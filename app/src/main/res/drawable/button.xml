<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the corner radius for rounded edges -->
    <corners android:radius="12dp" /> <!-- Adjust for rounded corners -->

    <!-- Set the background color (solid fill) -->
    <solid android:color="#1E88E5" /> <!-- Button or background color -->

    <!-- Set the border thickness and color (if needed) -->
    <stroke
        android:width="4dp"
        android:color="#0f172a" />

    <!-- Optional: Add a shadow to the background (optional) -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>
